<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.treino.TelaVisualizarTreinoController"> <!-- Fundo cinza claro -->

    <!-- Título -->
    <VBox alignment="CENTER" layoutX="25.0" layoutY="20.0" spacing="10" />

    <!-- Lista de Treinos -->
    <ListView fx:id="listViewTreinos" layoutX="30.0" layoutY="80.0" prefHeight="200.0" prefWidth="270.0" style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-padding: 5px;" />

    <!-- Botões -->
    <HBox alignment="CENTER" layoutX="49.0" layoutY="321.0" spacing="15">
        <Button fx:id="btnEditar" onAction="#onEditarButtonClick" style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-padding: 8px 15px;" text="Editar" />

        <Button fx:id="btnExcluir" onAction="#onExcluirButtonClick" style="-fx-background-color: #DC143C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-padding: 8px 15px;" text="Excluir" />

        <Button fx:id="btnFechar" onAction="#onFecharButtonClick" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-padding: 8px 15px;" text="Fechar" />
    </HBox>
     <Label layoutX="91.0" layoutY="30.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Treinos Salvos" />

</AnchorPane>
