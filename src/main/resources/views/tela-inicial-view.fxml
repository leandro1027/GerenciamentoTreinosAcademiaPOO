<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.TelaInicialController">

    <MenuBar layoutY="0.0" prefHeight="25.0" prefWidth="300.0">
        <Menu text="Treinos">
            <MenuItem onAction="#onAbrirTreinosButtonClick" text="Visualizar dados do treino" />
            <MenuItem onAction="#onNovoTreinoButtonClick" text="Registrar dados do treino" />
            <MenuItem onAction="#onEditarTreinoButtonClick" text="Editar dados do treino" />
            <MenuItem onAction="#onExcluirTreinoButtonClick" text="Excluir treino" />
        </Menu>
        <Menu text="Frequência">
            <MenuItem text="Registrar frequência" />
            <MenuItem text="Visualizar frequência" />
        </Menu>
    </MenuBar>

    <VBox alignment="CENTER" layoutX="10.0" layoutY="50.0" prefHeight="300.0" prefWidth="271.0" spacing="15.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Academia" />
        <Button onAction="#onNovoTreinoButtonClick" prefHeight="35.0" prefWidth="200.0" text="Registrar dados do treino" />

        <Button onAction="#onAbrirTreinosButtonClick" prefHeight="35.0" prefWidth="200.0" text="Visualizar dados do treino" />
        <Button onAction="#onEditarTreinoButtonClick" prefHeight="35.0" prefWidth="200.0" text="Editar dados do treino" />
        <Button onAction="#onExcluirTreinoButtonClick" prefHeight="35.0" prefWidth="200.0" text="Excluir treino" />
    </VBox>

</AnchorPane>
